# ============================================
# Service Endpoint Configuration
# ============================================
SBT_SERVICE_BASE_URL=http://localhost:8086
BRIDGE_SERVICE_URL=http://blockchain-bridge:3000
BRIDGE_WEBHOOK_URL=http://your-domain.com/webhook

# Validator Endpoints (JSON format)
VALIDATOR_ENDPOINTS=[{"id":"validator-1","role":"ui_validator","url":"http://validator-ui:8080","weight":0.40,"priority":1},{"id":"validator-2","role":"format_validator","url":"http://validator-format-1:8080","weight":0.20,"priority":2},{"id":"validator-3","role":"format_validator","url":"http://validator-format-2:8080","weight":0.20,"priority":3},{"id":"validator-4","role":"semantic_validator","url":"http://validator-semantic:8080","weight":0.20,"priority":4}]

# ============================================
# Asynchronous Processing Configuration
# ============================================
# Number of batch-verification workers
BATCH_VERIFICATION_WORKERS=5
# Task-queue buffer size
TASK_QUEUE_BUFFER_SIZE=1000
# Batch-processing size
BATCH_PROCESSING_SIZE=10
# API-call interval (milliseconds)
API_CALL_INTERVAL=1000

# ============================================
# VLC (Vector Logical Clock) Configuration
# ============================================
# VLC increment strategies
VLC_INCREMENT_ON_CREATION=true
VLC_INCREMENT_ON_VERIFICATION=true
# Maximum VLC increment for batch verification
BATCH_VLC_MAX_INCREMENT=10

# ============================================
# DGraph Configuration
# ============================================
DGRAPH_ENDPOINT=http://localhost:8080
DGRAPH_ADMIN_ENDPOINT=http://localhost:8080/admin
DGRAPH_USERNAME=
