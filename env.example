# ============================================
# PoCW Project Environment Configuration
# Copy this file to .env and fill in actual values
# ============================================

# ============================================
# Database Configuration
# ============================================
MYSQL_ROOT_PASSWORD=your_secure_root_password
MYSQL_DATABASE=pocw_db
MYSQL_USER=pocw_user
MYSQL_PASSWORD=your_secure_db_password

# ============================================
# Pinata IPFS Configuration
# ============================================
PINATA_API_KEY=your_pinata_api_key
PINATA_SECRET_KEY=your_pinata_secret_key

# ============================================
# Twitter Middleware Configuration
# ============================================
TWITTER_MIDDLE_LAYER_URL=https://your-twitter-middleware.com
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_BEARER_TOKEN=your_twitter_bearer_token

# Twitter Verification Configuration
TWITTER_VERIFICATION_ENABLED=true
TWITTER_API_RATE_LIMIT=300
TWITTER_API_RATE_WINDOW=900

# ============================================
# Blockchain Configuration
# ============================================
BLOCKCHAIN_RPC_URL=https://your-blockchain-rpc.com
