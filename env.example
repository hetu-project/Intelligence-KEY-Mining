# ============================================
# Intelligence KEY Mining - Environment Configuration
# Copy this file to .env and fill in your actual values
# ============================================

# ============================================
# Database Configuration (Required)
# ============================================
MYSQL_ROOT_PASSWORD=your_secure_root_password
MYSQL_DATABASE=pocw_db
MYSQL_USER=pocw_user
MYSQL_PASSWORD=your_secure_db_password
DATABASE_URL=mysql://pocw_user:pocw_password@localhost:3306/pocw_db

# ============================================
# SBT Service Configuration (Required)
# ============================================
# IPFS Storage via Pinata
PINATA_API_KEY=your_pinata_api_key
PINATA_SECRET_KEY=your_pinata_secret_key

# Blockchain Configuration
ETH_RPC_URL=https://sepolia.infura.io/v3/your_project_id
SBT_CONTRACT_ADDRESS=your_deployed_sbt_contract_address
SBT_CONTRACT_PRIVATE_KEY=your_sbt_contract_private_key

# Service URL
SBT_SERVICE_BASE_URL=http://localhost:8086

# ============================================
# Twitter Verification (Required for MinerGateway)
# ============================================
TWITTER_MIDDLE_LAYER_URL=https://your-twitter-middleware.com
TWITTER_API_KEY=your_twitter_api_key

# ============================================
# Service Private Keys (Required)
# ============================================
# Miner Gateway
MINER_PRIVATE_KEY=0x1111111111111111111111111111111111111111111111111111111111111111

# Validators (4 different keys required)
VALIDATOR_1_PRIVATE_KEY=0x2222222222222222222222222222222222222222222222222222222222222222
VALIDATOR_2_PRIVATE_KEY=0x3333333333333333333333333333333333333333333333333333333333333333
VALIDATOR_3_PRIVATE_KEY=0x4444444444444444444444444444444444444444444444444444444444444444
VALIDATOR_4_PRIVATE_KEY=0x5555555555555555555555555555555555555555555555555555555555555555

# ============================================
# Validator Endpoints (Required for MinerGateway)
# ============================================
VALIDATOR_ENDPOINTS=[{"id":"validator-1","role":"ui_validator","url":"http://validator-ui:8080","weight":0.40,"priority":1},{"id":"validator-2","role":"format_validator","url":"http://validator-format-1:8080","weight":0.20,"priority":2},{"id":"validator-3","role":"format_validator","url":"http://validator-format-2:8080","weight":0.20,"priority":3},{"id":"validator-4","role":"semantic_validator","url":"http://validator-semantic:8080","weight":0.20,"priority":4}]

# ============================================
# Points Service Configuration (Optional)
# ============================================
POINTS_TOTAL_POOL=100

# ============================================
# Service Configuration (Optional - have defaults)
# ============================================
# Service URLs
POINTS_SERVICE_URL=http://points-service:8080
DGRAPH_URL=dgraph-alpha:9080

# Logging
LOG_LEVEL=info

# Individual Validator Configuration (set by docker-compose)
# VALIDATOR_ID=validator-1
# VALIDATOR_ROLE=ui_validator  
# VALIDATOR_WEIGHT=0.40
# VALIDATOR_PRIVATE_KEY=${VALIDATOR_1_PRIVATE_KEY}

# ============================================
# Instructions
# ============================================
# 1. Copy this file: cp env.example .env
# 2. Fill in your actual values (replace placeholders)
# 3. Never commit .env to git (it's in .gitignore)
# 
# Required for basic functionality:
# - Database passwords
# - Pinata API keys (for SBT metadata)
# - ETH_RPC_URL (for blockchain interaction)
# - SBT contract address and private key
# - Twitter API key and middleware URL
# - All validator private keys
#
# Optional (have defaults):
# - Service URLs (if using different ports)
# - Points pool size
# - Log level